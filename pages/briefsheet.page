<apex:page standardController="Job__c" Extensions="JobExt" renderAs="PDF" action="{!Totals}">
  <table width="700" align="center" cellpadding="0" cellspacing="0">
    <tr>
      <td><span style="font-family:  Verdana, Arial, Helvetica, sans-serif;font-size: 23px; font-weight: normal; color: #2554C7;">Workshop Briefing Sheet</span></td>
      <td align="right"><img src="{!URLFOR($Resource.Logo)}" border="0" alt=""/></td>
    </tr>
  </table>
  <br/>
  <table width="700" align="center" style="margin-top:3px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td width="22%"><strong>Workshop Dates:</strong></td>
      <td width="28%"><apex:outputField value="{!Job__c.Certificate_Date_Text__c}" /></td>
      <td width="16%"><strong>ENS Job No.:</strong></td>
      <td width="34%"><apex:outputField value="{!Job__c.Name}" /></td>
    </tr>
    <tr>
      <td><strong>Workshop Leader/s:</strong></td>
      <td><apex:outputField value="{!Job__c.Presenters__c}" /></td>
      <td><strong>CSM:</strong></td>
      <td><apex:outputField value="{!Job__c.CSM_Name__c}" /></td>
    </tr>
    <tr>
      <td><strong>No. of Participants:</strong></td>
      <td><apex:outputText value="{!Job__c.No_of_Participants__c}" /></td>
      <td><strong>Status:</strong></td>
      <td><apex:outputText value="{!Job__c.Status__c}" /></td>      
    </tr>
    <tr>
      <td><strong>Type:</strong></td>
      <td><apex:outputText value="{!Job__c.Job_Type__c}" /></td>
      <td></td>
      <td></td>      
    </tr>
  </table>
  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td width="22%"><strong>NAM:</strong></td>
      <td width="28%"><apex:outputField value="{!Job__c.NAM_Name__c}" /></td>
      <td width="16%"><strong>Title:</strong></td>
      <td width="34%"><apex:outputField value="{!Job__c.NAM_Name__r.Title}" /></td>
    </tr>
    <tr>
      <td><strong>Phone:</strong></td>
      <td><apex:outputField value="{!Job__c.NAM_Name__r.Phone}" /></td>
      <td><strong>Email:</strong></td>
      <td><apex:outputField value="{!Job__c.NAM_Name__r.Email}" /></td>
    </tr>
  </table> 
  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td width="22%"><strong>Contact Person</strong></td>
      <td width="28%"><apex:outputField value="{!Job__c.Admin_Contact__c}" /></td>
      <td width="16%"><strong>Title:</strong></td>
      <td width="34%"><apex:outputField value="{!Job__c.Admin_Contact__r.Title}" /></td>
    </tr>
    <tr>
      <td><strong>Phone:</strong></td>
      <td><apex:outputField value="{!Job__c.Admin_Contact__r.Phone}" /></td>
      <td><strong>Email:</strong></td>
      <td><apex:outputField value="{!Job__c.Admin_Contact__r.Email}" /></td>
    </tr>
  </table> 
  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">    
    <tr>
      <td width="22%" valign="top"><strong>Client:</strong></td>
      <td width="28%" valign="top">
          <table cellpadding="0" cellspacing="0">
              <tr>
                  <td><apex:outputField value="{!Job__c.Account__c}" /></td>
              </tr>
              <tr>
                  <td><apex:outputField value="{!Job__c.Account__r.BillingStreet}" /></td>
              </tr>
              <tr>
                  <td><apex:outputField value="{!Job__c.Account__r.Billing_City_State_Postcode__c}" /></td>
              </tr>
              <tr>
                  <td><apex:outputField value="{!Job__c.Account__r.BillingCountry}" /></td>
              </tr>
          </table>
       </td>
       <td width="16%" valign="top"><strong>Venue Address:</strong></td>
      <td width="34%">
          <table cellpadding="0" cellspacing="0">
              <tr>
                  <td><apex:outputField value="{!Job__c.Venue_Contact__c}" />&nbsp;-&nbsp;<apex:outputField value="{!Job__c.Venue_Phone__c}" /></td>              
              </tr> 
              <tr>
                  <td><apex:outputField value="{!Job__c.Venue_Name__c}" /></td>
              </tr>
              <tr>
                  <td><apex:outputField value="{!Job__c.Venue_Address__c}" /></td>
              </tr>
              <tr>
                  <td><apex:outputField value="{!Job__c.Venue_City__c}" />, &nbsp;<apex:outputField value="{!Job__c.Venue_State__c}" />, &nbsp;<apex:outputField value="{!Job__c.Venue_Postcode__c}" /></td>
              </tr>    
              <tr>
                  <td><apex:outputField value="{!Job__c.Venue_Country__c}" /></td>              
              </tr>      
          </table>
       </td>
    </tr>
  </table>
  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td colspan="8"><strong>Fees</strong></td>
    </tr>
    <tr>
      <td width="9%"><strong>Role</strong></td>
      <td width="13%"><strong>Contact</strong></td>
      <td align="right" width="13%"><strong>Materials %</strong></td>
      <td align="right" width="13%"><strong>{!Job__c.Billing_Currency__r.Name} Fee</strong></td>
      <td align="right" width="13%"><strong>AUD Fee</strong></td>
      <td align="right" width="13%"><strong>Prof Serv %</strong></td>
      <td align="right" width="13%"><strong>{!Job__c.Billing_Currency__r.Name} Fee</strong></td>
      <td align="right" width="13%"><strong>AUD Fee</strong></td>
    </tr>
    <apex:repeat value="{!JR}" var="JobRoles">
    <tr>
      <td><apex:outputField value="{!JobRoles.Role__c}" /></td>
      <td><apex:outputField value="{!JobRoles.Contact__r.FirstName}" />&nbsp;<apex:outputField value="{!JobRoles.Contact__r.LastName}" /></td>
      <td align="right"><apex:outputField value="{!JobRoles.Materials_Share__c}" /></td>
      <td align="right"><apex:outputField value="{!JobRoles.Materials_Share_FX_Total__c}" /></td>
      <td align="right"><apex:outputField value="{!JobRoles.Materials_Share_AUD_Total__c}" /></td>
      <td align="right"><apex:outputField value="{!JobRoles.Prof_Serv_Share__c}" /></td>
      <td align="right"><apex:outputField value="{!JobRoles.Prof_Serv_Share_FX_Total__c}" /></td>
      <td align="right"><apex:outputField value="{!JobRoles.Prof_Serv_Share_AUD__c}" /></td>
 
    </tr>
    </apex:repeat>
    <tr>
      <td align="right" colspan="3"><strong>Totals:</strong></td>
      <td align="right"><strong>{!Materials_Total}</strong></td>
      <td align="right"><strong>{!Materials_Total_AUD}</strong></td>
      <td></td>
      <td align="right"><strong><apex:outputField value="{!Job__c.tmp_Total__c}" /></strong></td>
      <td align="right"><strong><apex:outputField value="{!Job__c.tmp_Total_AUD__c}" /></strong></td>
    </tr>
  </table>
  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td colspan="4"><strong>Materials Fees</strong></td>
    </tr>
    <tr>
      <td width="44%"><strong>Product</strong></td>
      <td align="right" width="14%"><strong>Quantity</strong></td>
      <td align="right" width="14%"><strong>Price</strong></td>
      <td align="right" width="14%" align="right"><strong>Price Total</strong></td>
      <td align="right" width="14%" align="right"><strong>Total AUD</strong></td>
    </tr>
    <apex:repeat value="{!JI}" var="JobItems">
    <tr>
      <td><apex:outputField value="{!JobItems.ENSProduct__r.Name}" /></td>
      <td align="right"><apex:outputField value="{!JobItems.Quantity__c}" /></td>
      <td align="right"><apex:outputField value="{!JobItems.Price_FX__c}" /></td>
      <td align="right"><apex:outputField value="{!JobItems.Item_Value_FX__c}" /></td>
      <td align="right"><apex:outputField value="{!JobItems.Item_Value_AUD__c}" /></td>
    </tr>
    </apex:repeat>
    <tr>
      <td align="right" colspan="3"><strong>Materials Total:</strong></td>
      <td align="right"><strong><apex:outputField value="{!Job__c.FX_Materials_Total__c}" /></strong></td>
      <td align="right"><strong><apex:outputField value="{!Job__c.AUD_Materials_Total__c}" /></strong></td>
    </tr>
  </table>
  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td align="right" width="72%" colspan="3"><strong>Grand Total:</strong></td>
      <td align="right" width="14%"><strong><apex:outputField value="{!Job__c.FX_Total__c}" /></strong></td>
      <td align="right" width="14%"><strong><apex:outputField value="{!Job__c.Total_Job_Value_AUD__c}" /></strong></td>
    </tr>
  </table>
  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td width="130"><strong>Expenses Agreed</strong></td>
    </tr>
    <tr>
      <td><apex:outputfield value="{!Job__c.Expenses_Agreed__c}" /></td>
    </tr>
  </table>

  <br/>
  <table width="700" align="center" style="margin-top:5px;border:1px solid #cccccc;" cellpadding="2" cellspacing="2">
    <tr>
      <td width="130"><strong>Other Comments</strong></td>
    </tr>
    <tr>
      <td><apex:outputfield value="{!Job__c.Comments__c}" /></td>
    </tr>
  </table>
</apex:page>